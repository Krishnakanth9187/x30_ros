<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="thermal_camera">

  <xacro:macro name="thermal_camera_sensor" params="xyz rpy parent">
    <!-- Pan Joint -->
    <joint name="thermal_camera_pan_joint" type="continuous">
      <origin xyz="${xyz}" rpy="${rpy}" />
      <parent link="${parent}" />
      <child link="thermal_camera_pan_link" />
      <axis xyz="0 0 1" />
      <limit effort="5.0" velocity="2.0" />
    </joint>

    <!-- Pan Link -->
    <link name="thermal_camera_pan_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.03" length="0.05" />
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.03" length="0.05" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
      </inertial>
    </link>

    <!-- Tilt Joint -->
    <joint name="thermal_camera_tilt_joint" type="continuous">
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <parent link="thermal_camera_pan_link" />
      <child link="thermal_camera_tilt_link" />
      <axis xyz="1 0 0" />
      <limit effort="5.0" velocity="2.0" />
    </joint>

    <!-- Tilt Link -->
    <link name="thermal_camera_tilt_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.025" length="0.05" />
        </geometry>
        <material name="green">
          <color rgba="0 1 0 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.025" length="0.05" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
      </inertial>
    </link>

    <!-- Thermal Camera Joint -->
    <joint name="thermal_camera_fixed_joint" type="fixed">
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <parent link="thermal_camera_tilt_link" />
      <child link="thermal_camera_link" />
    </joint>

    <!-- Thermal Camera Link -->
    <link name="thermal_camera_link">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.001 0.05 0.001" />
        </geometry>
      </collision>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.1 0.1 0.1" />
        </geometry>
      </visual>
      <inertial>
        <mass value="0.1" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
      </inertial>
    </link>

    <!-- Gazebo Plugin for Thermal Camera -->
    <gazebo reference="thermal_camera_link">
      <sensor type="camera" name="thermal_camera_sensor">
        <camera>
          <horizontal_fov>1.5708</horizontal_fov> <!-- 90 degrees in radians -->
          <image>
            <width>160</width>
            <height>120</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>100</far>
          </clip>
          <update_rate>10</update_rate>
        </camera>
        <plugin name="gazebo_ros_thermal_camera" filename="libgazebo_ros_thermal_depth_camera.so">
          <always_on>true</always_on>
          <update_rate>10</update_rate>
          <image_topic>/thermal_camera/image_raw</image_topic>
          <camera_info_topic>/thermal_camera/camera_info</camera_info_topic>
          <frame_name>thermal_camera_frame</frame_name>
        </plugin>
      </sensor>
    </gazebo>

    <!-- Transmissions for ROS 2 Control -->
    <ros2_control name="thermal_camera_pan_link" type="system">
      <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
      </hardware>
      <joint name="thermal_camera_pan_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="thermal_camera_tilt_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
    </ros2_control>
</xacro:macro>
</robot>
